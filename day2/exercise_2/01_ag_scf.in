&CONTROL

  ! Type of calculation
  calculation = 'scf'

  ! Arbitrary prefix, but keep it the same in follow-up calculations
  prefix = 'silver'

  ! Calculate forces on atoms
  tprnfor = .true.

  ! Path to pseudopotential directory
  pseudo_dir = '../pseudo'

  ! Path to where to store KS wavefunctions and the charge density
  outdir = './out'

  ! Print as much information as possible
  verbosity = 'high'
/

&SYSTEM

  ! Bravais lattice index (FCC=2)
  ibrav = 2

  ! Lattice constant (in Bohr)
  celldm(1) = 7.828570253

  ! Number of atoms in the unit cell
  nat = 1

  ! Number of different atomic species
  ntyp = 1

  ! How many bands to include in the calculation
  nbnd = 13

  ! Largest plane-wave kinetic energy in Ry (effectively size of basis set) for w.f.s
  ecutwfc = 50

  ! Largest plane-wave kinetic energy in Ry (effectively size of basis set) for the density
  ecutrho = 600

  ! Smear out the KS Fermi distribution to allow for easier numerical convergence
  ! https://vasp.at/wiki/Smearing_technique 
  occupations = 'smearing'
  smearing = 'methfessel-paxton'
  degauss = 0.01
/

&ELECTRONS

  ! Stabilizes convergence by mixing new and old charge densities during SCF
  mixing_beta = 0.7

  ! Tight convergence criterium
  conv_thr = 1.0d-10
/

! List of (arbitrary) symbols of the chemical species, mass and pseudopotential
ATOMIC_SPECIES
Ag  107.868  ag_pbe_v1.4.uspp.F.UPF

! Symbols of the chemical species and positions in crystal coordinates
ATOMIC_POSITIONS alat
Ag 0.00 0.00 0.00

! For which k-points to solve the KS wave equations
! Below is a 20x20x20 Monkhorst-Pack grid
K_POINTS (automatic)
20 20 20 0 0 0
